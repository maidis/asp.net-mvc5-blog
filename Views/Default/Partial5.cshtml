@using TravelTripProje.Models.Siniflar
@model List<Blog>

<div class="box1-left">
    @foreach (var x in Model)
    {
    <div class="bot-img">
        <img src="@x.BlogImage" alt="" style="width:120px; height:65px"/>
    </div>
    <div class="bot-desc1">
        <p>
            @if (@x.Aciklama.Length > 75)
            {@x.Aciklama.Substring(0, 75)}
        else
        {@x.Aciklama}
            </p>
    </div>
    <div class="clear"></div>
    }
</div>